{
  "name": "skalarly",
  "version": "0.0.0",
  "description": "Academic Social Media",
  "type": "module",
  "engines": {
    "node": "18.20.2",
    "npm": "10.5.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "NODE_ENV=development node --loader ts-node/esm server.ts",
    "build": "ng build && npm run build:backend",
    "build:backend": "tsc -p tsconfig.backend.json",
    "serve": "NODE_ENV=production node dist/server/server.mjs",
    "build:prod": "NODE_ENV=production ng build --prod && npm run build:backend",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "eslint . --ext .ts",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "e2e": "start-server-and-test serve http://localhost:4200 cypress:run"
  },
  "private": true,
  "dependencies": {
    "@angular-eslint/eslint-plugin-template": "^17.3.0",
    "@angular/animations": "^17.3.4",
    "@angular/common": "^17.3.4",
    "@angular/compiler": "^17.3.4",
    "@angular/core": "^17.3.4",
    "@angular/forms": "^17.3.4",
    "@angular/material": "^17.3.4",
    "@angular/platform-browser": "^17.3.4",
    "@angular/platform-browser-dynamic": "^17.3.4",
    "@angular/platform-server": "^17.3.4",
    "@angular/router": "^17.3.4",
    "@angular/ssr": "^17.3.4",
    "@types/compression": "^1.7.5",
    "bcrypt": "^5.1.1",
    "bootstrap": "^5.3.3",
    "compression": "^1.7.4",
    "dotenv": "16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "6.3.0",
    "mongoose": "^8.1.2",
    "ngx-image-cropper": "^7.2.1",
    "ngx-skeleton-loader": "^9.0.0",
    "rxjs": "~7.4.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.4",
    "@angular/cli": "~17.3.4",
    "@angular/compiler-cli": "^17.3.4",
    "@tsconfig/node16": "^16.1.3",
    "@types/body-parser": "^1.19.5",
    "@types/bootstrap": "^5.2.10",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/eslint": "^8.56.9",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.19.0",
    "@types/http-errors": "^2.0.4",
    "@types/jasmine": "~5.1.4",
    "@types/jasminewd2": "^2.0.13",
    "@types/multer": "^1.4.11",
    "@types/node": "^18.19.31",
    "@types/qs": "^6.9.14",
    "@types/range-parser": "^1.2.7",
    "@types/send": "^0.17.4",
    "@types/serve-static": "^1.15.7",
    "cypress": "^13.8.1",
    "eslint": "^8.57.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jasmine": "^4.1.3",
    "eslint-plugin-node": "^11.1.0",
    "jasmine-core": "~5.1.2",
    "jasmine-spec-reporter": "^7.0.0",
